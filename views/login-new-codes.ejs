<!DOCTYPE html>
<html xmlns:v-on="http://www.w3.org/1999/xhtml" xmlns:v-bind="http://www.w3.org/1999/xhtml">
<head>
    <%- include partials/meta.ejs %>
    <title>Raise Better</title>
    <base href="/login">

    <%- include partials/ga.ejs %>
    <%- include partials/styles.ejs %>

</head>
<body>
<%- include partials/header.ejs %>


<!-- Login -->
<section id="login" class="padding">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h2 class="uppercase heading_space">Request New Login Codes</h2>
            </div>
        </div>
        <%- include partials/messages.ejs%>
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="profile-login">
                    <div class="agent-p-form">
                        <form class="callus clearfix" v-on:submit.prevent="onSubmit" novalidate>
                            <div class="single-query form-group col-sm-12">
                                <input type="text" class="no-tt keyword-input" placeholder="username"
                                       name="username" v-model="username" v-validate="'required'">
                                <small class="error" v-show="errors.has('username')">
                                    {{ errors.first('username')}}
                                </small>
                            </div>
                            <div class="single-query form-group  col-sm-12">
                                <input type="text" class="no-tt keyword-input" placeholder="phone number"
                                       name="phone" v-model="phone" v-validate="'required'">
                                <small class="error" v-show="errors.has('phone')">
                                    {{ errors.first('phone')}}
                                </small>
                            </div>
                            <div class=" col-sm-12">
                                <input v-bind:disabled="!isValid" type="submit" value="submit now" class="btn-slide border_radius">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login end -->


<%- include partials/footer.ejs %>
<%- include partials/scripts.ejs %>

<script src="/dist/js/login-new-codes.js"></script>


</body>
</html>

