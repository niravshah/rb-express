<!DOCTYPE html>
<html xmlns:v-on="http://www.w3.org/1999/xhtml" xmlns:v-bind="http://www.w3.org/1999/xhtml">
<head>
    <%- include head/meta.ejs%>
    <title>Raise Better</title>
    <base href="/login">

    <%- include head/ga.ejs%>
    <%- include head/styles.ejs%>

</head>
<body>
<%- include header.ejs%>

<!-- First Login -->
<section id="login" class="padding">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h2 class="uppercase">First Login</h2>
                <p class="heading_space">We've emailed you your Login Code and sent you a separate Verification Code via text
                    <br/> You will need both pieces of information to access your Fundraiser
                </p>
            </div>
        </div>
        <div class="row" id="messageSection">
            <div v-if="messages.length > 0" class="col-md-12 text-center">
                <ul class="messages">
                    <li :class="m.type" v-for="m in messages">{{m.text}}</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="profile-login">
                    <div class="agent-p-form no-tt">
                        <form class="callus clearfix" v-on:submit.prevent="onSubmit" novalidate>
                            <div class="single-query form-group col-sm-12">
                                <input type="text" class="no-tt keyword-input" placeholder="Your Email Address"
                                       name="username" v-model="username" v-validate="'required|email'">
                                <small class="error" v-show="errors.has('username')">
                                    {{ errors.first('username')}}
                                </small>
                            </div>
                            <div class="single-query form-group col-sm-12">
                                <input type="text" class="no-tt keyword-input" placeholder="Login Code (sent to your email)"
                                       name="password" v-model="password" v-validate="'required'">
                                <small class="error" v-show="errors.has('password')">
                                    {{ errors.first('password')}}
                                </small>
                            </div>
                            <div class="single-query form-group col-sm-12">
                                <input type="text" class="no-tt keyword-input"
                                       placeholder="Verification Code (sent as a text to your phone)"
                                       name="code" v-model="code" v-validate="'required'">
                                <small class="error" v-show="errors.has('code')">
                                    {{ errors.first('code')}}
                                </small>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 pb20">
                                    <div class="col-sm-6 text-left">
                                        <a href="#" class="lost-pass">Lost your password?</a>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-sm-12">
                                <input v-bind:disabled="!isValid" type="submit" value="Login" class="btn-slide border_radius">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- First Login end -->

<%- include footer.ejs %>
<%- include scripts/all.ejs%>

<script src="/vue/mixins/jwt.js"></script>
<script src="/vue/header.js"></script>
<script src="/vue/first-login/firstLogin.js"></script>

</body>
</html>

